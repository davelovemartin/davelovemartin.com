---
import Thoughts from "./Thoughts.astro";
import Experiments from "./Experiments.astro";
import Title from "./Title.astro";
---

<style is:global>
  header {
    display: flex;
    justify-content: space-between;
  }
  .navigation ul {
    display: inline-flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.3rem 0.8rem;
    padding: 0;
    list-style: none;
  }

  .navigation ul li {
    margin: 0;
  }

  .navigation a {
    text-decoration: none;
    color: currentColor;
    display: inline-block;
  }

  .navigation a:hover svg path {
    fill: var(--color-incidental);
    transition: all 0.2s linear;
  }
</style>

<header>
  <div class="logo">
    <Title />
  </div>
  <nav class="navigation" aria-label="primary">
    <ul>
      <li>
        <a href="/thoughts">
          <Thoughts />
        </a>
      </li>
      <li>
        <a href="/experiments">
          <Experiments />
        </a>
      </li>
    </ul>
  </nav>
</header>

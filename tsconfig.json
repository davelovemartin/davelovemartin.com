{
  "extends": "astro/tsconfigs/base",
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@drawings/*": ["src/components/drawings/*"],
      "@experiments/*": ["src/components/experiments/*"],
      "@utilities/*": ["src/utilities/*"],
      "@images/*": ["src/images/*"]
    }
  }
}

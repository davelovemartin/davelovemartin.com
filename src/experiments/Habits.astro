---
const response = await fetch(
  `https://api.notion.com/v1/databases/${import.meta.env.DATABASE_ID}/query`,
  {
    method: "POST",
    headers: {
      "Content-Type": "application/json",
      Authorization: `${import.meta.env.NOTION_API_KEY}`,
      "Notion-Version": "2022-06-28",
    },
    body: JSON.stringify({ page_size: 100 }),
  }
);

const data = await response.json();
const date = data.results[0].properties.Date.date.start;
const activity = data.results[0].properties.Activity.title[0].text.content;
---

<h2 id="habits">Habits</h2>
<p>Date: {date}</p>
<p>Activity: {activity}</p>

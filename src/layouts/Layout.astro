---
import Centre from "../components/Centre.astro";
import Cover from "../components/Cover.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";

import "@fontsource/comic-mono";

const { title, description } = Astro.props.frontmatter || Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title || "davelovemartin"}</title>
    <meta
      name="description"
      content={description || "Exploring Innovation in Web Tech"}
    />

    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#1e374d" />
    <meta name="msapplication-TileColor" content="#fef9ef" />
    <meta name="theme-color" content="#fef9ef" />
    <meta name="theme-color" content="#0496ff" />
    <meta name="twitter:title" content={title || "davelovemartin"} />
    <meta
      name="twitter:description"
      content={description || "Exploring Innovation in Web Tech"}
    />
    <meta name="twitter:url" content="https://davelovemartin.com/?src=twitter"
    />
    <meta name="twitter:creator" content="@davelovemartin" />
  </head>
  <body>
    <Cover>
      <Header />
      <main>
        <Centre>
          <h1 class={title === "davelovemartin" ? "visually-hidden" : ""}>
            {title}
          </h1>
          <slot />
        </Centre>
        <slot name="card-grid" />
      </main>
      <Footer />
    </Cover>
    <style is:global>
      :root {
        /* colour palette */
        --color-foreground: #2c363f;
        --color-foreground-lite: #1e374d;
        --color-background: #fef9ef;
        --color-highlight: #ffad33;
        --color-highlighter: rgba(255, 173, 51, 0.666);
        --color-highlighter-p3: color(display-p3 0.935 0.62 0.023 / 0.8);
        --color-highlight-shadow: #e68a00;
        --color-error: #c1292e;
        --color-incidental: #0496ff; /* typography */
        --measure: 60ch;
        --outline-offset: 0.125rem;
        --border-radius: 0.125rem;
        /* modular scale */
        --ratio: 1.5;
        --s0: 1rem;
        --s-1: calc(var(--s0) / var(--ratio));
        --s1: calc(var(--s0) * var(--ratio));
        --s2: calc(var(--s1) * var(--ratio));
        --s3: calc(var(--s2) * var(--ratio));
        --s4: calc(var(--s3) * var(--ratio));
        /* timing */
        --t1: 0.2s;
        --t2: 0.4s;
        /* shadows */
        --shadow1: 0 0 0.5rem 0 rgba(30, 55, 77, 0.2);
        --shadow2: 0 0 1rem 0.5rem rgba(30, 55, 77, 0.2);
      }
      /* Display-P3 color, when supported. */
      @supports (color: color(display-p3 1 1 1)) {
        :root {
          --color-highlighter: var(--color-highlighter-p3);
        }
      }
      html {
        color: var(--color-foreground);
        background-color: var(--color-background);
        font-size: 20px;
        scroll-behavior: smooth;
      }
      *,
      *::before,
      *::after {
        box-sizing: border-box;
      }
      * {
        margin: 0;
        max-inline-size: var(--measure);
      }
      html,
      body,
      div,
      header,
      nav,
      main,
      footer {
        max-inline-size: none;
      }
      html,
      body {
        height: 100%;
      }
      body {
        line-height: 1.5;
        font-family: -apple-system, BlinkMacSystemFont, "avenir next", avenir,
          "helvetica neue", helvetica, ubuntu, roboto, noto, "segoe ui", arial,
          sans-serif;
        -webkit-font-smoothing: antialiased;
      }
      pre,
      code {
        font-family: "Comic Mono", monospace;
      }
      img,
      picture,
      video,
      canvas,
      svg {
        display: block;
        max-width: 100%;
      }
      input,
      button,
      textarea,
      select {
        font: inherit;
      }
      p,
      h1,
      h2,
      h3,
      h4,
      h5,
      h6 {
        overflow-wrap: break-word;
      }
      p,
      li,
      dl {
        max-width: var(--measure);
      }

      details,
      dd,
      dl,
      dt,
      fieldset,
      figcaption,
      figure,
      form,
      h1,
      h2,
      h3,
      h4,
      h5,
      h6,
      hgroup,
      hr,
      p,
      a,
      ul,
      ol,
      pre,
      table {
        margin-block-start: var(--s1);
        margin-block-end: var(--s1);
      }

      blockquote {
        margin-block-start: 3rem;
        margin-block-end: 3rem;
        padding-left: var(--s0);
        font-variation-settings: "wdth" 100, "wght" 420;
        word-spacing: 0.2em;
        font-style: italic;
      }

      /* typography ("wdth" 75.0-100.0, "wght"	300-800) */

      h1,
      h2,
      h3 {
        color: var(--color-foreground-lite);
      }

      h1,
      .font-xxl {
        line-height: 1.333334;
        font-variation-settings: "wdth" 100, "wght" 800;
        font-size: var(--s2);
        letter-spacing: -0.025em;
      }

      h2,
      .font-xl {
        line-height: 1;
        font-variation-settings: "wdth" 100, "wght" 600;
        font-size: var(--s1);
        letter-spacing: -0.025em;
      }

      h3,
      .font-l {
        font-variation-settings: "wdth" 100, "wght" 500;
        font-size: var(--s0);
        letter-spacing: -0.025em;
      }

      h1 + p,
      p + p,
      p + ul,
      p + ol,
      .font-xxl + p,
      h2 + p,
      .font-xl + p,
      h3 + p,
      .font-l + p,
      h1 + ul,
      .font-xxl + ul,
      h2 + ul,
      .font-xl + ul,
      h3 + ul,
      .font-l + ul {
        margin-block-start: 0;
      }

      h1,
      h2,
      h3,
      p,
      ul,
      ol {
        width: 100%;
      }

      p,
      a,
      li {
        line-height: 1.5;
        font-variation-settings: "wdth" 100, "wght" 400;
        font-style: normal;
        font-size: var(--s0);
      }

      li {
        margin-block: 0;
      }

      small {
        line-height: 2.25;
        font-variation-settings: "wdth" 99, "wght" 400;
        font-style: normal;
        font-size: var(--s-1);
      }

      @property --p {
        syntax: "<percentage>";
        inherits: false;
        initial-value: 100%;
      }

      a,
      a:link,
      a:visited,
      a:active {
        --q: calc(100% - var(--p));
        color: var(--color-foreground-lite);
        background: linear-gradient(
          to bottom,
          rgba(0, 0, 0, 0) var(--p),
          var(--color-highlighter) var(--q)
        );
        outline: var(--outline-offset) solid transparent;
        outline-offset: calc(var(--outline-offset) * -1);
        text-decoration: underline;
        transition: --p var(--t1) ease, color var(--t1) ease;
        font-variation-settings: "wght" 680;
        border-radius: var(--border-radius);
      }

      a:hover {
        --p: 68%;
        text-decoration: none;
      }

      a:focus {
        outline: var(--outline-offset) solid var(--color-incidental);
      }

      svg path {
        fill: var(--color-foreground);
      }

      .visually-hidden {
        clip: rect(0 0 0 0);
        clip-path: inset(50%);
        height: 1px;
        overflow: hidden;
        position: absolute;
        white-space: nowrap;
        width: 1px;
      }
    </style>
  </body>
</html>

---
import Thoughts from "./Thoughts.astro";
import Experiments from "./Experiments.astro";
import Title from "./Title.astro";
import NavItem from "./NavItem.astro";
import Box from "./Box.astro";
---

<style is:global>
  header {
    display: flex;
    justify-content: space-between;
  }
  .navigation ul {
    display: inline-flex;
    align-items: center;
    gap: 0.3rem 0.8rem;
    padding: 0;
    list-style: none;
    margin: 0;
  }

  .navigation ul li {
    margin: 0;
  }
</style>

<header>
  <Box>
    <Title />
  </Box>
  <nav class="navigation" aria-label="primary">
    <ul>
      <li>
        <NavItem href="/thoughts" currentPath={Astro.url.pathname}>
          <Thoughts />
        </NavItem>
      </li>
      <li>
        <NavItem href="/experiments" currentPath={Astro.url.pathname}
          ><Experiments />
        </NavItem>
      </li>
    </ul>
  </nav>
</header>

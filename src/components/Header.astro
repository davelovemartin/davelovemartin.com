---
import About from "./About.astro";
import Contact from "./Contact.astro";
import Journal from "./Journal.astro";
import Experiments from "./Experiments.astro";
import Title from "./Title.astro";
---

<style is:global>
  header {
    display: flex;
    justify-content: space-between;
  }
  .navigation ul {
    display: inline-flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.3rem 0.8rem;
    padding: 0;
    list-style: none;
  }

  .navigation a {
    text-decoration: none;
    color: currentColor;
  }

  .navigation a:hover svg path {
    fill: var(--color-incidental);
  }
</style>

<header>
  <div class="logo">
    <Title />
  </div>
  <nav class="navigation" aria-label="primary">
    <ul>
      <li>
        <a href="/about">
          <About />
        </a>
      </li>
      <li>
        <a href="/journal">
          <Journal />
        </a>
      </li>
      <li>
        <a href="/experiments">
          <Experiments />
        </a>
      </li>
      <li>
        <a href="/contact">
          <Contact />
        </a>
      </li>
    </ul>
  </nav>
</header>

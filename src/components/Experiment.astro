---
import Box from "../components/Box.astro";
import Graphic from "../components/Graphic.astro";

interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<Box>
  <h2>{title}</h2>
  <Graphic>
    <slot />
  </Graphic>
  <p>{description}</p>
</Box>
